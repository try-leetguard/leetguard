{
  "manifest_version": 3,
  "name": "LeetGuard - Block distractions while you LeetCode",
  "version": "0.1.0",
  "description": "Take back control of your interview preparation with LeetGuard",

  "icons": {
    "16": "icons/leetguard-logo-black.png",
    "32": "icons/leetguard-logo-black.png",
    "48": "icons/leetguard-logo-black.png",
    "128": "icons/leetguard-logo-black.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js" 
  },
  "permissions": [
    "tabs",
    "storage",
    "declarativeNetRequest",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*",
    "https://leetguard.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": []
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "styles.css", "auth.js", "blocklist-sync.js", "activity-logger.js", "goal-sync.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://leetguard.com/*"
      ],
      "js": ["webapp-detector.js", "content.js"],
      "run_at": "document_start"
    }
  ]
}